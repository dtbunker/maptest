<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewMarker"
            android:src="@drawable/custom_pin"
            android:layout_centerInParent="true"
            android:focusableInTouchMode="false" />

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:id="@+id/imageTaxi"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="7dp"
            android:layout_alignTop="@+id/imageViewMarker"
            android:layout_below="@+id/imageViewMarker"
            android:layout_toRightOf="@+id/imageViewMarker"
            android:layout_alignLeft="@+id/imageViewMarker"
            android:scaleType="centerInside"
            android:src="@drawable/ico_taxi" />

    </RelativeLayout>
</RelativeLayout>